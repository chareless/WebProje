<div class="section" id="arsiv">
    @foreach (var item in Model.Foto)
    {
    <div class="container">
        <div class="row">
            <div class="col-sm-6" id="@item.fotoBaslik">
                <div class="card mb-0" data-aos="fade-up">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-body" align="center">
                                <a href="@item.fotoUrl" target="_blank"><img src="@item.fotoUrl" width="@item.fotoWidth"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6" id="@item.fotoBaslik">
                <div class="card mb-0" data-aos="fade-up">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-body" align="center" width="@item.fotoWidth">
                                <p class="h2">@item.fotoBaslik</p><br />
                                <p class="h5">@item.fotoAciklama</p><br /><br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <br>
</div>