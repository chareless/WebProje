@model WebSiteProje.Models.SliderFoto

@{
    ViewData["Title"] = "SliderEdit";
    Layout = "_LayoutAdmin";
}

<div class="card-body">
    <h1>Düzenle</h1>
    <h3>Slider Bilgileri</h3>
</div>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="SliderEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="sliderFotoId" />
                    <div class="form-group">
                        <label asp-for="fotoUrl" class="control-label"></label>
                        <input asp-for="fotoUrl" class="form-control" />
                        <span asp-validation-for="fotoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="fotoBaslik" class="control-label"></label>
                        <input asp-for="fotoBaslik" class="form-control" />
                        <span asp-validation-for="fotoBaslik" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="fotoAciklama" class="control-label"></label>
                        <input asp-for="fotoAciklama" class="form-control" />
                        <span asp-validation-for="fotoAciklama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<div class="card-body">
    <a asp-action="Admin">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
